<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_marginBottom="4dp">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOriginal"
        android:checked="true"/>

    <TextView
        android:id="@+id/tvOriginal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/checkBox"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/tvFormatted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/checkBox"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/checkBox"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <View
        android:id="@+id/separator1"
        android:layout_width="2dp"
        android:layout_height="22dp"
        android:layout_alignTop="@id/tvOriginal"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/checkBox"
        android:background="@color/accentA200"/>

    <View
        android:id="@+id/separator2"
        android:layout_width="2dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@id/tvFormatted"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@id/checkBox"
        android:background="@color/accentA200"/>

    <ImageView
        android:id="@+id/ivFlag"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@id/tvFormatted"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/flag_00"/>

</RelativeLayout>